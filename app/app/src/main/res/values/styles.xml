<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextStyle.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextStyle.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextStyle.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonStyle.Primary" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ButtonStyle.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <!-- Input Styles -->
    <style name="InputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <!-- Chip Styles -->
    <style name="ChipStyle.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="chipIconSize">18dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="itemRippleColor">?attr/colorPrimaryContainer</item>
        <item name="itemActiveIndicatorStyle">@style/App.ActiveIndicator</item>
    </style>

    <style name="App.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryContainer</item>
    </style>

    <!-- Progress Indicator Style -->
    <style name="ProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorSize">48dp</item>
        <item name="trackThickness">4dp</item>
        <item name="trackCornerRadius">2dp</item>
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="trackColor">?attr/colorPrimaryContainer</item>
    </style>
</resources> 